<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.MyText
        </item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog.App" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogTitlePanelStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Panel.CenterStacked
        </item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked
        </item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/MaterialAlertDialog.MaterialComponents.Title.MyText
        </item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button.MyTextButton.Dialog
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.MyTextButton.Dialog
        </item>
    </style>

    <style name="MaterialAlertDialog.MaterialComponents.Title.MyText" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MyTextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- 自定义日期选择器 Start -->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <!-- 自定义日期选择器 End -->

</resources>
